<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="MusicPlayerMAUI.Views.PlaylistPage"
Title="Playlist"
xmlns:vm="clr-namespace:MusicPlayerMAUI.ViewModels;assembly=MusicPlayerMAUI">

    <Grid RowDefinitions="*,Auto" ColumnDefinitions="200,*">
        <!-- Sidebar -->
        <StackLayout BackgroundColor="#1E1E1E" Padding="20" Grid.Row="0" Grid.Column="0">
            <Label Text="Music App" FontSize="22" TextColor="White"/>
            <Button Text="Home" Style="{StaticResource MenuButtonStyle}" />
            <Button Text="Settings" Style="{StaticResource MenuButtonStyle}" Command="{Binding NavigateSettingsCommand}" />
        </StackLayout>

        <!-- Content -->
        <StackLayout Grid.Row="0" Grid.Column="1" Padding="20">
            <Label Text="Playlist" FontSize="28"/>
            <CollectionView ItemsSource="{Binding Songs}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <!-- Remove x:DataType to fix XLS0431 and XLS0414 -->
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="60,*">
                            <Image Source="{Binding Cover}" WidthRequest="50" HeightRequest="50" />
                            <StackLayout Grid.Column="1">
                                <Label Text="{Binding Title}" FontSize="16"/>
                                <Label Text="{Binding Artist}" FontSize="12" Opacity="0.7"/>
                            </StackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>

        <!-- Mini Player -->
        <Grid BackgroundColor="#222" Padding="10" HeightRequest="70" VerticalOptions="End" Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image Source="{Binding CurrentSong.Cover}" WidthRequest="50" HeightRequest="50"/>
            <StackLayout Grid.Column="1" Padding="10,0">
                <Label Text="{Binding CurrentSong.Title}" TextColor="White"/>
                <Label Text="{Binding CurrentSong.Artist}" TextColor="White" Opacity="0.7" FontSize="12"/>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>